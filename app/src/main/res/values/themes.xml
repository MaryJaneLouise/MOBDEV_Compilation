<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style
        name="Theme.MOBDEVCompilation"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">?attr/colorOnPrimarySurface</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/colorPrimaryVariant</item>
        <item name="colorSecondaryVariant">?attr/colorOnSecondaryFixed</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimarySurface</item>
        <item name="android:windowLightStatusBar">?attr/colorAccent</item>

        <!-- Customize your theme here. -->
    </style>

    <style
        name="Theme.MOBDEVCompilation.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style
        name="Theme.MOBDEVCompilation.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style
        name="Theme.MOBDEVCompilation.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />
</resources>